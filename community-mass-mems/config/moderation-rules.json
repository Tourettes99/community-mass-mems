{
  "rules": {
    "hate_speech": {
      "enabled": true,
      "severity": "high",
      "action": "reject",
      "description": "Content that expresses hate or encourages violence against protected groups"
    },
    "harassment": {
      "enabled": true,
      "severity": "high",
      "action": "reject",
      "description": "Personal attacks, bullying, or threatening behavior"
    },
    "self_harm": {
      "enabled": true,
      "severity": "high",
      "action": "reject",
      "description": "Content promoting or encouraging self-harm"
    },
    "sexual": {
      "enabled": true,
      "severity": "high",
      "action": "reject",
      "description": "Sexually explicit content"
    },
    "violence": {
      "enabled": true,
      "severity": "high",
      "action": "reject",
      "description": "Graphic violence or gore"
    },
    "spam": {
      "enabled": true,
      "severity": "medium",
      "action": "reject",
      "description": "Spam, scams, or misleading content"
    }
  },
  "knowledge_base": {
    "references": [
      {
        "url": "https://platform.openai.com/docs/guides/moderation",
        "description": "OpenAI Moderation API Guidelines"
      },
      {
        "url": "https://www.who.int/health-topics/suicide",
        "description": "WHO Guidelines on Self-Harm Content"
      }
    ],
    "custom_rules": [
      {
        "pattern": "gambling|betting|casino",
        "action": "flag",
        "reason": "Potential gambling content"
      }
    ]
  },
  "moderation_settings": {
    "auto_approve_threshold": 0.1,
    "auto_reject_threshold": 0.8,
    "require_human_review": true,
    "log_all_decisions": true
  }
}
